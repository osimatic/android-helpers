<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="alert_info">
		<item name="android:background">#d9edf7</item>
		<item name="android:textColor">#31708f</item>
		<item name="android:padding">5dp</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="alert_warning">
		<item name="android:background">#fff3cd</item>
		<item name="android:textColor">#664d03</item>
		<item name="android:padding">5dp</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="alert_danger">
		<item name="android:background">#F7D9D9</item>
		<item name="android:textColor">#8F313C</item>
		<item name="android:padding">5dp</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="button">
		<item name="android:background">@color/transparent</item>
		<item name="android:textSize">14sp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:minHeight">0dp</item>
	</style>

	<style name="confirmation_message">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:textStyle">bold</item>
	</style>
</resources>